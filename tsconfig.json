{
    "compilerOptions": {
        "target": "es2015",
        "allowJs": true,
        "sourceMap": true,
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "module": "es2015",
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "filesGlob":  [
        "typings/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "index.android.js",
        "index.ios.js",
        "build"
    ],
    "compileOnSave": true
}